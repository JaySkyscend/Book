<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_book_order_form" model="ir.ui.view">
        <field name="name">book.shop.order.form</field>
        <field name="model">book.shop.order</field>
        <field name="arch" type="xml">
            <form string="Book Order">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_name"/>
                        <field name="order_date"/>
                        <field name="book_ids" widget="many2many_tags"/>
                        <field name="total_amount" readonly="1"/>
                        <field name="state" readonly="1"/>
                    </group>
                    <footer>
                        <button name="action_confirm" type="object" string="Confirm" state="draft"/>
                        <button name="action_done" type="object" string="Mark as Done" state="confirmed"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_book_order_tree" model="ir.ui.view">
        <field name="name">book.shop.order.list</field>
        <field name="model">book.shop.order</field>
        <field name="arch" type="xml">
            <list string="Book Orders">
                <field name="name"/>
                <field name="customer_name"/>
                <field name="order_date"/>
                <field name="total_amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_book_order" model="ir.actions.act_window">
            <field name="name">Books Order</field>
            <field name="res_model">book.shop.order</field>
            <field name="view_mode">list,form</field>
        </record>


    <menuitem id="menu_book_order" parent="menu_book_root" name="Book Order" action="action_book_order" sequence="5"/>

</odoo>
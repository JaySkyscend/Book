<?xml version="1.0" encoding="UTF-8"?>



<odoo>
     <!-- ✅ All records must be inside <data> -->

        <!-- Form View -->
        <record id="view_book_form" model="ir.ui.view">
            <field name="name">book.shop.book.form</field>
            <field name="model">book.shop.book</field>
            <field name="arch" type="xml">
                <form string="Book">
                    <sheet>
                        <notebook>
                            <page string="Book Details">
                        <group>
                            <group>
                            <field name="name"/>
                            <field name="author_id"/>
                            <field name="publisher_id"/>
                            </group>
                        <group>
                            <field name="price" widget="monetary"/>
                            <field name="stock"/>
                            <field name="isbn"/>
                        </group>
                        </group>
                        </page>
                        <page string="Sales Information">
                            <group>
                            <field name="sales_count" readonly="1"/>
                            </group>
                       </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_book_list" model="ir.ui.view">
            <field name="name">book.shop.book.tree</field>
            <field name="model">book.shop.book</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" string="Title"/>
                    <field name="author_id" string="Author" />
                    <field name="publisher_id" string="Publisher"/>
                    <field name="price" string="Price" widget="monetary"/>
                    <field name="stock" string="Stock"/>
                    <field name="isbn" string="ISBN"/>
                    <field name="sales_count" string="Sales" widget="progressbar"/>
                </list>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_book_search" model="ir.ui.view">
            <field name="name">view.book.search</field>
            <field name="model">book.shop.book</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="isbn"/>
                </search>
            </field>
        </record>

    <record id="view_book_graph" model="ir.ui.view">
        <field name="name">book.shop.graph</field>
        <field name="model">book.shop.book</field>
        <field name="arch" type="xml">
        <graph string="Book Stock View">
            <field name="name" type="row"/>
            <field name="stock" type="measure"/>
            <field name="sales_count" type="measure"/>
        </graph>
        </field>
    </record>


     <record id="view_book_pivot" model="ir.ui.view">
        <field name="name">book.shop.pivot</field>
        <field name="model">book.shop.book</field>
        <field name="arch" type="xml">
        <graph string="Book Stock Pivot view">
            <field name="name" type="row"/>
            <field name="stock" type="measure"/>
        </graph>
        </field>
    </record>

        <!-- Action -->
        <record id="action_book" model="ir.actions.act_window">
            <field name="name">Books</field>
            <field name="res_model">book.shop.book</field>
            <field name="view_mode">list,form,graph,pivot</field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_book_root" name="Book Shop Management" sequence="1"/>
        <menuitem id="menu_book" parent="menu_book_root" name="Books" sequence="2" action="action_book"/>

    <!-- ✅ Closing <data> -->
</odoo>

<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_author_form" model="ir.ui.view">
        <field name="name">book.shop.author.form</field>
        <field name="model">book.shop.author</field>
        <field name="arch" type="xml">
            <form string="Author">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="biography"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <record id="view_author_list" model="ir.ui.view">
            <field name="name">book.shop.author.tree</field>
            <field name="model">book.shop.author</field>
            <field name="arch" type="xml">
                    <list>
                        <field name="name"/>
                        <field name="biography"/>
                    </list>
            </field>
    </record>


     <record id="view_author_search" model="ir.ui.view">
            <field name="name">view.author.search</field>
            <field name="model">book.shop.author</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

     <record id="action_author" model="ir.actions.act_window">
            <field name="name">Author</field>
            <field name="res_model">book.shop.author</field>
            <field name="view_mode">list,form</field>
     </record>



    <menuitem id="menu_author" parent="menu_book_root" name="Authors" action="action_author" sequence="3"/>

<!--    <menuitem id="menu_book" parent="menu_book_root" name="Books" sequence="2" action="action_book"/>-->

</odoo>

<odoo>
    <record id="view_publisher_form" model="ir.ui.view">
        <field name="name">book.shop.publisher.form</field>
        <field name="model">book.shop.publisher</field>
        <field name="arch" type="xml">
            <form string="Publisher">
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="address"/>
                </group>
            </sheet>
            </form>
        </field>
    </record>

    <record id="view_publisher_list" model="ir.ui.view">
            <field name="name">book.shop.publisher.tree</field>
            <field name="model">book.shop.publisher</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="address"/>
                </list>
            </field>
        </record>


    <record id="view_publisher_search" model="ir.ui.view">
            <field name="name">book.shop.publisher.search</field>
            <field name="model">book.shop.publisher</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>


    <record id="action_publisher" model="ir.actions.act_window">
            <field name="name">Book</field>
            <field name="res_model">book.shop.publisher</field>
            <field name="view_mode">list,form</field>
        </record>

    <menuitem id="publisher_menu" parent="book_shop_root_menu" name="Publishers" action="action_publisher"/>



</odoo>
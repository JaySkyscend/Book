<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="book_invoice_email_template" model="mail.template">
        <field name="name">Book Invoice Email</field>
        <field name="model_id" ref="model_book_shop_invoice"/>
        <field name="email_from">jaypatel35462@gmail.com</field>
        <field name="email_to">${object.customer_email}</field>
        <field name="subject">Invoice for Your Book Order - ${object.name}</field>
        <field name="body_html"><![CDATA[
            <p>Hello ${object.customer_name},</p>
            <p>Thank you for your order! Please find your invoice details below.</p>
            <p><strong>Invoice Number:</strong> ${object.name}</p>
            <p><strong><Invoice Date:</strong> ${object.invoice_date.strftime('%d %b %Y')}</p>
            <p><strong>Total Amount:</strong> ${object.total_amount} Rs.</p>
            <p>Please find your invoice attached.</p>
            <br/>
            <p>Best Regards,</p>
            <p>Jay Patel</p>
        ]]></field>
             <field name="report_template" ref="book_shop.book_invoice_report_template"/>
             <field name="auto_delete" eval="True"/>
    </record>
</odoo>